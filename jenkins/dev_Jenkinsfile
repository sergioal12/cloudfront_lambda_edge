#!/usr/bin/env groovy
@Library('utils@master') _
node('linux') {
   stage('Preparation') {
      git credentialsId: 'intl_gituser', url: 'https://intl_gituser@bitbucket-latam.aws.lmig.com/scm/anpolserv/co-plsv-front-infr.git', branch: 'develop'
      sh 'npm --version'
      sh 'aws --version'
      sh 'npm install'
      sh 'sls --version'
      sh 'pwd'
      sh 'ls'
      sh 'ls'
   }
   stage('Build') {
      deployToDev {
         withAWS(credentials:getAWSCredentialID(environment:"${env.APPENV}"), region:'us-east-1') {
            sh 'export SLS_DEBUG=true'
            sh 'dir'
            sh 'ls'
            sh 'pwd'
            sh "sls deploy -v --stage ${env.APPENV.replace('_', '')}" // Values: dev, non_prod and prod
            sh 'aws cloudfront create-invalidation  --distribution-id     E3MQFJTWKC42C1 --paths "/*"'
         }
         withSonarQubeEnv('sonarqube') {
            // TODO sh 'sonar-scanner -Dsonar.projectKey=andino-flex-mailer -Dsonar.projectName=andino-flex-mailer -Dsonar.projectVersion=0.0.1 -Dsonar.sources=src'
         }
      }
   }
}
